generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  number String  @id
  name   String?
  email  String?
  order  String? @default("")
}

enum MessageType {
  order_placed
  intro
  help
  order_quantity
  checkout
  new_order
  customer_support
  layered_image
}

model Message {
  content        String?
  media_url      String?
  number         String
  date           DateTime     @id @db.Timestamptz
  is_outbound    Boolean?
  was_downgraded Boolean?     @default(false)
  send_style     String?
  type           MessageType?
  response_time  Float?
  // order          Order[]
  // photo          Photo[]
}

